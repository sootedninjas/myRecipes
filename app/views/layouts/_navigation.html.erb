  <header class="navbar navbar-fixed-top navbar-default">
    <div class="container"> 
      <%= link_to "myRecipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>
      <div class="nav_item">
        <%= link_to "Chef Register", register_path, class: "btn btn-default btn-warning" %>
      </div>
    <% if logged_in? %>
      <div class="nav_item">
        <%= link_to "Chef Logout", logout_path, class: "btn btn-default btn-warning" %>
      </div>
      <div>
      <ul class="nav_ul_item">
        <li class="dropdown">
          <%= link_to "#", class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
            <%= current_user.chefname %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "View Profile", chef_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
            </ul>
        </li>
      </ul>
      </div>
    <% else %>
      <div class="nav_item">
        <%= link_to "Chef Login", login_path, class: "btn btn-default btn-warning" %>
      </div>
    <% end %>
      <div>
      <ul class="nav_ul_item">
        <li class="dropdown">
          <%= link_to "#", class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
            Styles <b class="caret"></b>
          <% end %>
            <ul class="dropdown-menu">
              <% Style.all.each do |style| %>
              <li><%= link_to style.name, style_path(style) %></li>
              <% end %>
              <% if logged_in? %>
              <li class='divider'></li>
              <li>
                <%= link_to(new_style_path) do %>
                  New Style
                <% end %>
              </li>
              <% end %>
            </ul>
        </li>
      </ul>
      </div>
      <div>
      <ul class="nav_ul_item">
        <li class="dropdown">
          <%= link_to "#", class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
            Ingredients <b class="caret"></b>
          <% end %>
            <ul class="dropdown-menu">
              <% Ingredient.all.each do |ingredient| %>
              <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
              <% end %>
              <% if logged_in? %>
                <li class='divider'></li>
                <li>
                    <%= link_to(new_ingredient_path) do %>
                    New Ingredient
                    <% end %>
                </li>
              <% end %>
            </ul>
        </li>
      </ul>
      </div>
    </div>
  </header>